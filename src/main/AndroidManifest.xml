<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sinhvien.orderdrinkapp">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/re"
        android:label="@string/app_name"
        android:roundIcon="@drawable/re"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrderDrinkApp">
        <activity
            android:name=".Activities.ChangePassword"
            android:exported="false" />
        <activity
            android:name=".Activities.UpdateStatusMonActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.EditTableActivity"
            android:label="Sửa bàn ăn"
            android:theme="@style/PopUpActivity" />
        <activity
            android:name=".Activities.AddTableActivity"
            android:label="Thêm bàn ăn"
            android:theme="@style/PopUpActivity" />
        <activity
            android:name=".Activities.AmountMenuActivity"
            android:label="Chọn số lượng"
            android:theme="@style/PopUpActivity" />
        <activity
            android:name=".Activities.SendMail"
            android:label="Gửi mã khôi phục"
            android:theme="@style/PopUpActivity" />
        <activity android:name=".Activities.PaymentActivity" />
        <activity android:name=".Activities.AddCategoryActivity" />
        <activity android:name=".Activities.AddMenuActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.DetailStatisticActivity" />
        <activity android:name=".Activities.AddStaffActivity" />
        <activity android:name=".Activities.StaticThongKe" />
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>