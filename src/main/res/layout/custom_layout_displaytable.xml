<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lightwhite"
    android:padding="10dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_customtable_TenBanAn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="test"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_customtable_BanAn"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_below="@+id/txt_customtable_TenBanAn"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_baseline_event_seat_40" />
    <ImageView
        android:id="@+id/img_customtable_GoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_fastfood_24"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_marginLeft="6dp"
        />
    <ImageView
        android:id="@+id/img_customtable_ThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_payments_24"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_toRightOf="@id/img_customtable_GoiMon"
        android:layout_marginLeft="12dp"
        />
    <ImageView
        android:id="@+id/img_customtable_TrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_half_24"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_below="@id/img_customtable_BanAn"
        android:layout_toRightOf="@id/img_customtable_ThanhToan"
        android:layout_marginLeft="12dp"

        />

</RelativeLayout>